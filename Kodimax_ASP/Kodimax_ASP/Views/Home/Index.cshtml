@{
    ViewBag.Title = "Home Page";
}

<div class="container">

    @{
        if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            //message tiene un valor
            <div class="alert alert-danger">@ViewBag.Message</div>
        }
    }
    <form action="/Home/Login" method="post"> @*/Home/Login envia los datos al controlador Home, a la funcion Index *@
        <div class="form-group">
            <label>Ingresa tu usuario</label>
            <input type="text" name="usuario" value="" />
        </div>
        <div class="form-group">
            <label>Ingresa tu contraseña</label>
            <input type="password" name="password" value="" />
        </div>
        <div class="form-group">
            <button>Iniciar sesion</button>
        </div>
    </form>
    <button type="button" class="btn btn-info">@Html.ActionLink("Registrarse", "Registrar", "")</button>
</div>